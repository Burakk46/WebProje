
@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Areas/Yonetim/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Kategori Ekle</h2>
<div class="col-md-6">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title"></h3>
        </div>

        <form class="form-horizontal" method="post">
            <div class="box-body">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-3 control-label">Kategori Adı</label>

                    <div class="col-sm-9">
                        <input type="text" name="KategoriAdi" class="form-control" placeholder="Kategori Adı Giriniz">
                    </div>
                </div>
            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-info pull-right">Kaydet</button>
            </div>
        </form>
    </div>

    
   
</div>
